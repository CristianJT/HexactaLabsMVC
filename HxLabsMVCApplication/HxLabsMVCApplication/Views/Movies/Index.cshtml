@model HxLabsMVCApplication.Models.MovieIndexModel

@{
    ViewBag.Title = "Movies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Películas</h2>
<br />

@using (Html.BeginForm())
{
    <p class="col-md-offset-2">       
        <input class="btn btn-default" style="background-color: #e6e6e6" type="submit" value="Buscar pelicula" />
        @Html.TextBoxFor(model => model.SearchString)       
    </p>
}
<br />

@if (User.Identity.IsAuthenticated)
{
   <table >
        <thead>
            <tr>
                <th style="display: none;"></th>
                <th>Name</th>
                <th>Release Date</th>
                <th>Runtime</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var movie in Model.Movies)
            {
                <tr>
                    <td style="display: none;">@Html.HiddenFor(m => movie.Id)</td>
                    <td class="col-md-6">
                        <img src="@movie.CoverLink" style="height: 30px;" />
                        <span id="movie_Name">@movie.Name</span>
                    </td>
                    <td class="col-md-2">@Html.DisplayFor(m => movie.ReleaseDate, "Date")</td>
                    <td class="col-md-1">@movie.Runtime</td>
                    <td>@Html.ActionLink("Editar", "Edit", new { id = movie.Id })</td>
                    <td>@Html.ActionLink("Eliminar", "Delete", new { id = movie.Id })</td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <div>
        
        @foreach (var movie in Model.Movies)
        {
            <div>
                <div >
                    <img data-src="holder.js/400x300" src="@movie.CoverLink" >

                    <div >
                        <p ><strong>@movie.Name</strong></p>
                    </div>
                </div>
            </div>
        }
    </div>
}
<br />
<br />
<div class="col-md-offset-3"><a href="~/Movies/Create" class="btn btn-primary">Crear Película</a></div>
<br />
